    glVertex3f(-7.5, -13, -1.5); glVertex3f(-7.5, -15, -1.5);
    glVertex3f(-7.5, -13, -1.5); glVertex3f(-7.5, -15, -1.5);
    glEnd();
    //meja 2
    glBegin(GL_QUADS);
    glColor3f(0.9, 0.4, 0.3);
    glVertex3f(10, -13, 4); glVertex3f(10, -13, 1); glVertex3f(-8, -13, 1); glVertex3f(-8, -13, 4);
    glEnd();
    glBegin(GL_LINES);
    glColor3f(0.9, 0.4, 0.3);
    glVertex3f(9.5, -13, 3.5); glVertex3f(9.5, -15, 3.5);
